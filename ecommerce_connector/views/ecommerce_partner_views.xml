<odoo>
    <record id="ecommerce_partner_tree" model="ir.ui.view">
        <field name="name">ecommerce.partner.tree</field>
        <field name="model">ecommerce.partner</field>
        <field name="type">tree</field>
        <field name="arch" type="xml">
            <tree editable="bottom">
                <field name="ecommerce_connection_id" options="{'no_create': True}" />
                <field name="partner_id" options="{'no_create': True}" />
                <field name="ecommerce_id" />
            </tree>
        </field>
    </record>
    <record id="ecommerce_partner_action" model="ir.actions.act_window">
        <field name="name">Ecommerce Partner</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">ecommerce.partner</field>
        <field name="view_mode">tree</field>
        <field name="view_id" ref="ecommerce_partner_tree" />
    </record>
</odoo>
