<odoo>
    <record id="ecommerce_connector_call_view_form" model="ir.ui.view">
        <field name="name">ecommerce.connector.call.view.form</field>
        <field name="model">ecommerce.connector.call</field>
        <field name="type">form</field>
        <field name="arch" type="xml">
            <form string="Ecommerce Connector Call">
                <header>
                    <field name="state" widget="statusbar" />
                </header>
                <sheet>
                    <div class="oe_title">
                        <label for="name" />
                        <h1><field name="name" class="oe_inline" /></h1>
                    </div>
                    <group>
                        <group>
                            <field name="datetime" />
                            <field name="ecommerce_connection_id" />
                            <field name="ecommerce_origin" />
                            <field name="operation" />
                        </group>
                        <group>
                            <field
                                name="sale_order_id"
                                attrs="{'invisible': [('sale_order_id', '=', False)]}"
                            />
                            <field
                                name="account_move_id"
                                filename="file_name"
                                attrs="{'invisible': [('account_move_id', '=', False)]}"
                            />
                        </group>
                    </group>
                    <notebook>
                        <page string="Message In" anem="message_in">
                            <field name="message_in" />
                        </page>
                        <page string="Message Out" anem="message_out">
                            <field name="message_out" />
                        </page>
                        <page
                            string="Error"
                            anem="error"
                            attrs="{'invisible': [('state', '!=', 'error')]}"
                        >
                            <field name="error" />
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>
    <record id="ecommerce_connector_call_view_tree" model="ir.ui.view">
        <field name="name">ecommerce.connector.call.view.tree</field>
        <field name="model">ecommerce.connector.call</field>
        <field name="type">tree</field>
        <field name="arch" type="xml">
            <tree
                create="0"
                decoration-danger="state == 'error'"
                decoration-success="state == 'done'"
            >
                <field name="name" />
                <field name="datetime" />
                <field name="operation" />
                <field name="ecommerce_connection_id" />
                <field name="ecommerce_origin" />
                <field name="state" />
            </tree>
        </field>
    </record>
    <record id="ecommerce_connector_call_search" model="ir.ui.view">
        <field name="name">ecommerce.connector.call.search</field>
        <field name="model">ecommerce.connector.call</field>
        <field name="arch" type="xml">
            <search>
                <group>
                    <filter
                        string="Draft"
                        name="ecommerce_connector_call_draft"
                        domain="[('state', '=', 'draft')]"
                    />
                    <filter
                        string="Error"
                        name="ecommerce_connector_call_error"
                        domain="[('state', '=', 'error')]"
                    />
                </group>
            </search>
        </field>
    </record>
    <record id="ecommerce_connector_call_action" model="ir.actions.act_window">
        <field name="name">Ecommerce Connector Call</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">ecommerce.connector.call</field>
        <field name="view_mode">tree,form</field>
        <field name="view_id" ref="ecommerce_connector_call_view_tree" />
        <field
            name="context"
        >{"search_default_ecommerce_connector_call_draft":1, "search_default_ecommerce_connector_call_error":1}</field>
    </record>
</odoo>
