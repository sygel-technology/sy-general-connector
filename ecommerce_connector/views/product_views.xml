<odoo>
    <record id="ecommerce_connector_product_product_tree_view" model="ir.ui.view">
        <field name="name">ecommerce.connector.product.product.tree.view</field>
        <field name="model">product.product</field>
        <field name="inherit_id" ref="product.product_product_tree_view" />
        <field name="arch" type="xml">
            <field name="product_template_variant_value_ids" position="attributes">
                <attribute name="optional">hide</attribute>
            </field>
            <field name="product_template_variant_value_ids" position="after">
                <field name="product_template_attribute_value_ids" widget="many2many_tags" groups="product.group_product_variant" readonly="1" optional="show"/>
            </field>
        </field>
    </record>
</odoo>
