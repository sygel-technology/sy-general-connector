            name="name"
        >ecommerce.connector.sale.type.ecommerce.connection.view.form</field>
        <field name="model">ecommerce.connection</field>
        <field
            name="inherit_id"
            ref="ecommerce_connector.ecommerce_connection_view_form"
        />
